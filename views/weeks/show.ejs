<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <h1>Weeks show page</h1>
  <div>
    Start Day: <%= week.startDay %><br>
    Month: <%= week.month %><br>
    Year: <%= week.year %><br>
    Weekday: <%= week.weekday %><br>
    Date: <%= week.weekdate %><br>
    End Day: <%= week.endDay %>
  </div>
  
  <% days.forEach(function(day) { %>
    <div class="day">
      <h2><%= day.weekday %> <%= day.weekdate %></h2>
      <div class="entries">
        <ul>
          <% day.entries.forEach(function(entry) { %>
            <li><%= entry.content %></li>
          <% }); %>
        </ul>

        <a href="/days/<%= day._id %>/entries/new">New</a>
      </div>
    </div>
  <% }); %>

  <nav>
    <a href="/weeks">Back to Weeks Index</a>
  </nav>
</body>

</html>