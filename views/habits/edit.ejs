<%- include('../partials/header') %>
<div class="center-section">
    <div class="heading">
        <h2>Edit This Habit</h2>
    </div>
    <div class="container">
        <form action="/months/<%= monthId %>/weeks/<%= weekId %>/habits/<%= editHabit._id %>?_method=PUT" method="POST">
            <label>
                <p>Updated Habit: </p>                
                <input type="text" name="content" value="<%= editHabit.content %>">
            </label>
            <button class="submit-icon lower" type="submit"><i class="fas fa-arrow-right"></i> Update</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>